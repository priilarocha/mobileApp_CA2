<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:contentDescription="This is the image of the movie"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="147dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieImage"/>

    <TextView
        android:id="@+id/movieCert"
        android:text="R"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/movieImage"
        app:layout_constraintStart_toEndOf="@id/movieTitle"/>

    <TextView
        android:id="@+id/movieStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starring: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"/>

    <TextView
        android:id="@+id/movieStarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Robert Downey Jr."
        app:layout_constraintStart_toEndOf="@id/movieStar"
        app:layout_constraintTop_toBottomOf="@id/movieTitle" />

    <TextView
        android:id="@+id/movieTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running time "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieStarName" />

    <TextView
        android:id="@+id/movieTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="1h 30m"
        app:layout_constraintStart_toEndOf="@id/movieTime"
        app:layout_constraintTop_toBottomOf="@id/movieStarName"/>

    <ImageView
        android:id="@+id/movieSeatsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numberSeatsRemaining"
        app:layout_constraintTop_toTopOf="@+id/addSeats"
        app:srcCompat="@drawable/baseline_chair_24" />

    <Button
        android:id="@+id/addSeats"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:padding="0dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/baseline_add_24"
        app:layout_constraintTop_toTopOf="@id/numberSeatsSelected"
        app:layout_constraintStart_toEndOf="@id/numberSeatsSelected"
        app:layout_constraintBottom_toBottomOf="@id/numberSeatsSelected"/>

    <Button
        android:id="@+id/removeSeats"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:padding="0dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/seatSelected"
        app:layout_constraintTop_toTopOf="@id/seatSelected"
        app:layout_constraintStart_toEndOf="@id/seatSelected"
        android:drawableTop="@drawable/baseline_remove_24" />

    <TextView
        android:id="@+id/numberSeatsSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/removeSeats"
        app:layout_constraintStart_toEndOf="@id/removeSeats"
        app:layout_constraintBottom_toBottomOf="@id/removeSeats"/>

    <TextView
        android:id="@+id/plotTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the plot of the movie"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="321dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/movieTime"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/seatSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seats Selected"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="321dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/plotTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/numberSeatsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seatSelected" />

</androidx.constraintlayout.widget.ConstraintLayout>